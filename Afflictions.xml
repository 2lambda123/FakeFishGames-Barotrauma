<?xml version="1.0" encoding="utf-8"?>
<Afflictions>
<!-- DoT for incendium -->
  <Affliction
    name="Burning"
    identifier="bg_burning"
    description="You are in flames!"
    type="burn"
    causeofdeathdescription=""
    selfcauseofdeathdescription=""
    limbspecific="true"
    activationthreshold="1.0"
    showiconthreshold="1000"
    maxstrength="20">
    <Effect minstrength="1" maxstrength="20"
      minvitalitydecrease="0"
      maxvitalitydecrease="0"
      strengthchange="-1.5" >
      <StatusEffect target="Limb" >
        <Affliction identifier="burn" amount="0.75" />
	<Conditional InWater="false" />
      </StatusEffect>
      <StatusEffect target="Limb" >
        <ParticleEmitter particle="flamethrower" particlespersecond="14" scalemin="0.2" scalemax="0.3" distancemin="0" distancemax="30" />
        <ParticleEmitter particle="smoke" particlespersecond="6" scalemin="2" scalemax="2.5" />
	<Conditional InWater="false" />
      </StatusEffect>
      <StatusEffect target="Limb" disabledeltatime="true">
        <ReduceAffliction identifier="bg_burning" amount="5" />
	<Conditional InWater="true" />
      </StatusEffect>
    </Effect>
    <icon texture="Content/UI/MainIconsAtlas.png" sourcerect="768,640,128,128" color="195,0,0,255" origin="0,0"/>
  </Affliction>
<!-- This thing makes you "deaf" once a Stun Grenade explodes nearby. Note: Maybe all explosions should give concussion? Thats how people mostly get concussion irl i guess -->
 <Affliction
    name="Grenade Concussion"
    identifier="stungrenadeeffect"
    description=""
    type="damage"
    causeofdeathdescription=""
    selfcauseofdeathdescription=""
    limbspecific="false"
    showiconthreshold="1000"
    maxstrength="30">
    <Effect minstrength="0" maxstrength="10"
      strengthchange="-0.8">
      <StatusEffect target="Character" ObstructVision="true" LowPassMultiplier="0.3" setvalue="true" />

    </Effect>
    <Effect minstrength="10" maxstrength="20"
      strengthchange="-0.8">
      <StatusEffect target="Character" ObstructVision="true" LowPassMultiplier="0.1" setvalue="true" />

    </Effect>
    <Effect minstrength="20" maxstrength="30"
      strengthchange="-0.8">	
    </Effect>


  </Affliction>
<!-- This one plays constant tinnitus effect, unique to stun grenade -->
 <Affliction
    name="Grenade Concussion"
    identifier="tinnituseffect"
    description=""
    type="damage"
    causeofdeathdescription=""
    selfcauseofdeathdescription=""
    limbspecific="false"
    showiconthreshold="1000"
    maxstrength="30">
    <Effect minstrength="0" maxstrength="30"
      strengthchange="-0.8">	
      <StatusEffect target="Character" setvalue="true" >
        <Conditional IsLocalPlayer="True"/>
        <Sound file="Content/Items/Weapons/tinnitusloop.ogg" loop="true" volume="0.8"/>
      </StatusEffect>
    </Effect>


  </Affliction>

<!-- Blinding light effects for stun grenades -->

